{
  "name": "torrentflix",
  "version": "1.0.2",
  "description": "Online streaming site to stream downloaded torrent videos online",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node  -r dotenv/config build/server.js",
    "build": "npm run clean && npm run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config build/server.js",
    "clean": "rimraf ./build",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "eslint": "eslint . --ext .js,.ts",
    "upgrade": "npm update --save-dev && npm update --save",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@prisma/client": "3.6.0",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "bull": "^4.1.1",
    "cheerio": "^1.0.0-rc.10",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jest": "^27.4.5",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "prisma": "3.6.0",
    "socket.io": "^4.3.2",
    "supertest": "^6.1.6",
    "tree-kill": "^1.2.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "typescript": "^4.5.4",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cheerio": "^0.22.30",
    "@types/hapi__joi": "^17.1.7",
    "@types/jsonwebtoken": "^8.5.6",
        "colors": "^1.4.0",
    "concurrently": "^5.3.0",
    "@types/bull": "^3.15.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.7",
    "@types/ws": "^8.2.0",

    "ts-node": "^9.0.0"
  }
}
